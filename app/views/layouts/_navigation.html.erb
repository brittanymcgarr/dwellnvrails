<a name="top"></a>
<!-- Navigation panel for the logo and menu options along the top -->
<div id="navigation">
	
	<div id="logo">
		<%= link_to image_tag("dwellNV.png", alt: "Welcome Home", width: 275, height: 125), home_path %>
	</div>
	
	<!-- Fixed menu at the top of the screen -->
	<div id="menu">
		<ul class="navoptions">
			
			<!-- Check for logged in user and adjust navigation options -->
			<% if logged_in? %>
				<li><%= link_to "Log Out", logout_path, method: "delete" %></li>
				<li><%= link_to "Dashboard", current_user %></li>
			<% else %>
				<li><%= link_to "Log In", login_path %></li>
			<% end %>
			
			<li><%= link_to "About Us", about_path %></li>
			<li><%= link_to "Listings", listings_path %></li>
			<li><%= link_to "Contact", contact_path %></li>
			<li><%= link_to "Reno's Best Buys", renobb_path %></li>
		</ul>
	</div>
	
</div>