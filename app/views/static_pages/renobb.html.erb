	</div>
	
	<div id="sectionbanner">
		<p class="goldtext">
			South Reno
		</p>
	</div>
	
	<!-- Wrapper for the listings panel -->
	<div id="listings">
	
		<ol class="listings">
			<%= render @southlistings %>
		</ol>
		<%= will_paginate @southlistings %>
	
	</div>
	
	<div id="sectionbanner">
		<p class="goldtext">
			Contact Us Today!
		</p>
	</div>
	
	<!-- Wrapper for the contact panel -->
	<div id="contact">
		<div id="contacttext">
			<ul>
				<li>Phone: (775) 830-6036</li>
				<li>Address: 4950 Kietzke Lane STE #302-A, Reno, NV 89509</li>
				<li>Email: michelle@dwellNV.com</li>
			</ul>
		</div>
		
		<!-- Media icons -->
		<div id="media">
			<ul>
				<li>
					<%= link_to image_tag("twitter.png"), '#' %>
				</li>
				
