<!-- Main wrapper for the articles -->
<div id="content">
	
	<!-- View panel for the splash image -->
	<div id="splash">
		<div id="testimonial">
			<% if @testimonial.description != nil %>
				<%= simple_format(@testimonial.description) %>
			<% end %>
			
			<% if @testimonial.image %>
				<%= image_tag(@testimonial.image.url) %>
			<% end %>
		</div>
		
		<div id="splashimage">
			<%= image_tag("renosign.png") %>
		</div>
	</div>
	
	<div id="sectionbanner">
		<p class="goldtext">
			Reno's Best Buys
		</p>
	</div>
	
	<!-- Wrapper for the listings panel -->
	<div id="listings">
		<ol class="listings">
			<%= render @renobblistings %>
		</ol>
		<%= will_paginate @renobblistings %>
		
	</div>
	
	<div id="sectionbanner">
		<p class="goldtext">
			River and Downtown
		</p>
	</div>
	
	<!-- Wrapper for the listings panel -->
